      <!-- BODY DRIVE WHEEL URDF -->
   <link name="base">

       <visual>
   	        <origin rpy="0 0 0" xyz="0 0. 0"/>
          <geometry>
              <box size="0.7 0.7 1.2"/>
         </geometry>
         <material name="grey">
          <color rgba="0.6 0.6 0.6 1"/>
        </material>
       </visual>

       <collision>
        <origin rpy="0 0 0" xyz="0 0. 0"/>
        <geometry>
            <box size="0.7 0.7 1.2"/>
       </geometry>
       </collision>

       <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="3"/>
        <inertia
          ixx="1.0" ixy="1" ixz="1"
          iyy="1.0" iyz="1"
          izz="1.0"/>
      </inertial>

    </link>
    <!-- RIGHT DRIVE WHEEL URDF -->
   <joint name="body_right_wheel" type="continuous">
   	<axis xyz="0 0 1"/>
    	<parent link="base"/>
      <child link="right_wheel"/>
      <origin rpy="1.5707 0 0" xyz="0 -0.41 -0.600"/>
      <limit effort="30" velocity="1.0" lower="-2.2" upper="0.7" />
      
   </joint>
   
